pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
player = {
	x = 73,
	y = 140
}
level = {}
for x=1, 65 do
	for y=1, 65 do
			local col = 15
			if y < 32 then
				col = 2
			end
		add(level, {x=x*2-1, y=y*2-1, c=col})
	end
end
end

function _update()
	if btn(1) then
		player.x += 1
	elseif btn(2) then
		player.x -= 1
	end
	if btn(3) then
		player.y += 1
	elseif btn(4) then
		player.y -= 1
	end
	if btn(4) then
		local r = flr(rnd(#level)) + 1
		debug_text = r
		local stored = level[r]
		stored.c = 15
		-- remove it from list and re-add it to make it render last --
		del(level, stored)
		add(level, stored)
	end
end

function _draw()
	cls()
	for i=1,#level do
		circfill(level[i].x, level[i].y, 2, level[i].c)	
	end
	print(debug_text, 1, 1, 7)
end
